{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Python Script on GPU and Save Output",
            "type": "shell",
            "command": "source .venv/bin/activate",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}


